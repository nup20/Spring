<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--[1] using value tag -->
<bean class="com.Student" name="Student1">
<property name="id" value="2001"/>
<property name="name" value="nupur"/>
<property name="address" value="nagpur"/>
</bean>

<!-- -if you want to make one more object then  -->
<!-- [2]value as Using aattribute -->

<bean class="com.Student" name="Student2">
<property name="id" value="2004"/>
<property name="name" value="Riya"/>
<property name="address" value="pune"/>

    
</bean>

<!--[3] make aobject using p schema -->
<bean class="com.Student" name="Student3" p:id="111" p:name="uuuu" p:address="nagpur"/>

</beans>